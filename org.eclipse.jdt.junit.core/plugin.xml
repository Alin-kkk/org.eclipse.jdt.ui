<plugin
   id="org.eclipse.jdt.junit"
   name="org.eclipse.jdt.junit"
   version="1.0.0"
   class="org.eclipse.jdt.junit.internal.JUnitPlugin">
	<requires>
	   <import plugin="org.eclipse.ui"/>
	   <import plugin="org.eclipse.core.resources"/>
	   <import plugin="org.eclipse.core.boot"/>
	   <import plugin="org.eclipse.debug.core"/>
	   <import plugin="org.eclipse.debug.ui"/>
	   <import plugin="org.eclipse.jdt.core"/>
	   <import plugin="org.eclipse.jdt.ui"/>
	   <import plugin="org.eclipse.jdt.debug"/>
	   <import plugin="org.eclipse.swt"/>
	   <import plugin="org.eclipse.core.runtime"/>
	   <import plugin="org.eclipse.jdt.launching"/>
	   <import plugin="org.apache.xerces"/>	
	   <import plugin="org.junit"/>     
	</requires>
	
	<runtime>
	   <library name="junitsupport.jar">
	         <export name="*"/>
	    </library>
	</runtime>

	<extension
	      point="org.eclipse.ui.views">
		   <category
		         name="%Section.label"
		         id="org.eclipse.jdt.junit">
		   </category>
	   <view
	         name="%JUnit.label"
	         icon="icons/smalllogo.gif"
	         category="org.eclipse.jdt.junit"
	         class="org.eclipse.jdt.junit.internal.TestRunnerUI"
	         id="org.eclipse.jdt.junit.viewpart">
	   </view>
	</extension>

	<extension 
      point = "org.eclipse.debug.core.launchers"> 
         <launcher 
             id = "org.eclipse.jdt.junit.launcher"
             class = "org.eclipse.jdt.junit.internal.Launcher" 
             modes = "run, debug"
  	     	 label = "%LocalLauncher.label"
	     	 wizard = "org.eclipse.jdt.junit.internal.ApplicationWizard"     
	     	 public = "true"
	     	 description = "Launches JUnit Test(s)"/>
   	</extension> 

	
	<extension
		point="org.eclipse.ui.preferencePages">
		<page name="%JUnitPageName"
			id="org.eclipse.jdt.junit.preferences"
			class="org.eclipse.jdt.junit.internal.PreferencePage">
		</page>
   	</extension>

</plugin>
